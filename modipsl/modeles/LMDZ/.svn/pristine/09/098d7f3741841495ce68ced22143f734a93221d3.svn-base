# Pour la stabilisation
random_notrig_max=0.99
ok_adjwk=y
tmax_fonte_cv=278.15


### nrlmd le 10/04/2012: Fermeture ###
#Fermeture par couche-limite (0: deterministe, 1: statistique, 2: statistique+convergence grande échelle)
iflag_clos_bl=1
